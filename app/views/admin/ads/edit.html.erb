<div class="container">
  <h1>Editing Image Ad</h1>

  <%= render 'form', ad: @ad %>


  <div class="date-ranges well">
    <h2>Date Ranges: </h2>
    <table class="date-range-table">
      <thead>
        <tr>
          <th> Start Date:</th>
          <th> End Date: </th>
          <th> </th>
      </thead>
      <tbody>
        <% @ad.start_end_dates.each do |date| %>
          <tr>
            <td> <%= date.hr_start_date %> </td>
            <td> <%= date.hr_end_date %>  </td>

            <td class="text-right"> <%= link_to icon('trash'),
                    ad_start_end_date_path(date.ad_id, date.id),
                    method: :delete,
                    data: { confirm: 'Delete date range?' },
                    :class=>"delete-button"
                %>
            </td>
        <% end %>
      </tbody>
    </table>

    <a href="#" class="button modal-toggle date-range-button" data-target=".date-modal"> <i class="fa fa-calendar" aria-hidden="true"></i>
 Add Date Range </a>
  </div>

  <div class="time-ranges well">
    <h2>Time Ranges: </h2>
    <table class="date-range-table">
      <thead>
        <tr>
          <th> Start Time:</th>
          <th> End Time: </th>
          <th> </th>
      </thead>
      <tbody>
        <% @ad.start_end_times.each do |time| %>
          <tr class="time-range-list">
            <td> <%= time.hr_start_time %> </td>
            <td> <%= time.hr_end_time %> </td>
            <td class="text-right">
              <%= link_to icon('trash'),
                    ad_start_end_time_path(time.ad_id, time.id),
                    method: :delete,
                    data: { confirm: 'Delete time range?' },
                    :class=>"delete-button"
                %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <a href="#" class="button modal-toggle date-range-button" data-target=".time-modal">
      <i class="fa fa-clock-o" aria-hidden="true"></i>
      Add Time Range
    </a>
  </div>
</div>


<div class="date-modal modal">
  <div class="modal-wrapper">
    <span class="close-modal"> <i class="fa fa-times-circle" aria-hidden="true"></i></span>
    <div class="modal-body">
      <h2> Add Date: </h2>
      <%= render 'admin/start_end_dates/form' %>
    </div>
  </div>
</div>

<div class="time-modal modal">
  <div class="modal-wrapper">
    <span class="close-modal"> <i class="fa fa-times-circle" aria-hidden="true"></i></span>
    <div class="modal-body">
      <h2> Add Time:</h2>
      <%= render 'admin/start_end_times/form' %>
    </div>
  </div>
</div>
