<p id="notice"><%= notice %></p>

<h1>Ads</h1>

<table>
  <thead>
    <tr>
      <th>File Name</th>
      <th>Image Name</th>
      <th>Displayed</th>
      <th>Priority</th>
      <th>Alt Text</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.filename %></td>
        <td><%= ad.image_name %></td>
        <td><%= ad.displayed %></td>
        <td><%= ad.priority %></td>
        <td><%= ad.alttext %></td>
        <td><%= ad.link %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>
