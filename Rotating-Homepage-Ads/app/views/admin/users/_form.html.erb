<%= form_for(user) do |f| %>
  <%= render '/application/error_messages', object: f.object %>
  
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label :firstname %>
    <%= f.text_field :firstname %>
  </div>

  <div class="actions">
    <br><%= f.submit %>
  </div>
<% end %>
