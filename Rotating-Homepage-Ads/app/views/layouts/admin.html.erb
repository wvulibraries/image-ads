<!DOCTYPE html>
<html>
  <head>
    <title>RotatingHomepageAds</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <div class="title-block">
      <h1> Rotating Image Ads :: Admin Panel</h1>
    </div>

    <div class="user-panel">
      <%# if authenticated? %>
         <span>You are logged in.</span>
         <span><%#= link_to "Logout", logout_url %></span>
      <%# else %>
        <span>You are not logged in.</span>
        <span><%#= link_to "Login", login_url %></span>
      <%# end %>
    </div>
  </header>

  <nav>
    <ul>
      <li> <a href=""> Home </a> </li>
      <li> <a href=""> Edit / Delete Users </a> </li>
      <li> <a href=""> Add Users </a> </li>
      <li> <a href=""> Edit / Delete Ads </a> </li>
      <li> <a href=""> Add Ads </a> </li> 
    </ul>
  </nav>

  <main>
    <%= yield %>
  </main>

  <footer>
    <div class="builtBy">
        <span class="built">Built</span>
        <span class="by">By </span>
        <span class="wvu">WVU</span>
        <span class="libs">Libraries</span>
    </div>
  </footer>
</html>
