<%= form_for(ad) do |f| %>
  <% if ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% ad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :'File Upload' %><br>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :image_name %>
    <%= f.text_field :image_name %>
  </div>

  <div class="field">
    <%= f.label :'Is this image being displayed now?' %><br>
    <%= f.select :displayed, ['No', 'Yes']%>
  </div>

  <div class="field">
    <%= f.label :'What is the display priority of this Ad?' %><br>
    <%= f.select :priority, [['1 - Low', 1], ['2 - Medium', 2], ['3 - High', 3]]%>
  </div>

  <div class="field">
    <%= f.label :'Please provide meaningful alt text.' %>
    <%= f.text_field :alttext %>
  </div>

  <div class="field">
    <%= f.label :'Add a Link' %>
    <%= f.text_field :link %>
  </div>

  <div>
    <%= f.label :'Days of the Week'%><br>
    <%= f.collection_check_boxes(:selected_days, Date::DAYNAMES, :downcase, :to_s) do |day| %>
      <%= day.check_box + day.text%>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
